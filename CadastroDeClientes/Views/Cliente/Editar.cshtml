@model ClienteModel

@{
    ViewData["Title"] = "Editar Cliente";
}

<h3>Editar cliente</h3>

<form asp-controller="Cliente" asp-action="Editar" method="post">

    <input type="hidden" asp-for="Id" class="form-control">


    <div class="input-group mb-3">
        <span class="input-group-text">Código</span>
        <input type="text" asp-for="Codigo" class="form-control">

    </div>

    <div class="input-group mb-3">
        <span class="input-group-text">Nome/Razao social</span>
        <input type="text" asp-for="NomeRazaoSocial" class="form-control">
        <span class="input-group-text">Nome abreviado/fantasia</span>
        <input type="text" asp-for="NomeAbreviadoFantasia" class="form-control">
    </div>


    <div class="input-group mb-3">
        <span class="input-group-text">E-mail</span>
        <input type="text" asp-for="Email" class="form-control">
        <span class="input-group-text">Telefone</span>
        <input type="text" asp-for="Telefone" class="form-control">
    </div>


    <div class="input-group mb-3">
        <select asp-for="Tipo" class="input-group-text" aria-label="Default select example">
            <option selected>Selecione</option>
            <option value="CPF">CPF</option>
            <option value="CNPJ">CNPJ</option>
        </select>
        <input type="text" asp-for="CpfCnpj" class="form-control">

    </div>
    <div class="input-group mb-3">
        <span class="input-group-text">Rg/Ie</span>
        <input type="text" asp-for="RgIe" class="form-control">
    </div>



    <div class="input-group mb-3">
        <span class="input-group-text">Cep</span>
        <input type="text" asp-for="Cep" class="form-control">
        <span class="input-group-text">Logradouro</span>
        <input type="text" asp-for="Logradouro" class="form-control">
    </div>

    <div class="input-group mb-3">
        <span class="input-group-text">Número</span>
        <input type="text" asp-for="Numero" class="form-control">
        <span class="input-group-text">Complemento</span>
        <input type="text" asp-for="Complemento" class="form-control">
    </div>

    <div class="input-group mb-3">
        <span class="input-group-text">Bairro</span>
        <input type="text" asp-for="Bairro" class="form-control">
        <span class="input-group-text">Municipio</span>
        <input type="text" asp-for="Municipio" class="form-control">
        <span class="input-group-text">UnidadeFederativa</span>
        <input type="text" asp-for="UnidadeFederativa" class="form-control">
    </div>


    <button type="submit" class="btn btn-primary">Alterar</button>
    <a class="btn btn-secondary" role="button" asp-controller="Cliente" asp-action="Index">Voltar</a>

</form>